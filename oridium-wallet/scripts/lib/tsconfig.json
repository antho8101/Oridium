{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./scure-bip39/dist",
    "rootDir": "./scure-bip39/src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./scure-bip39/src/**/*"],
  "exclude": ["./scure-bip39/dist"]
}